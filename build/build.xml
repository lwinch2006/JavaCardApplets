<?xml version="1.0" encoding="UTF-8"?>
<project name="JavaCardApplets" default="BuildHelloWorld" basedir=".">
    <get src="https://github.com/martinpaljak/ant-javacard/releases/latest/download/ant-javacard.jar" dest="." skipexisting="true"/>
    <taskdef name="javacard" classname="pro.javacard.ant.JavaCard" classpath="ant-javacard.jar"/>
    <target name="Clean" description="Cleaning up">
        <delete dir="cap-files"/>
    </target>
    <target name="BuildHelloWorld" description="Building HelloWorld CAP file">
        <property environment="env"/>
        <javacard jckit="${env.HOME}/Downloads/002/smartcard-tools/sdk/oracle_javacard_sdks/jc304_kit">
            <cap package="dka.javacard.helloworld" aid="D2:76:00:01:24:10:00:00" output="cap-files/dka.javacard.helloworld.cap" sources="../src" version="1.0">
                <applet class="HelloWorld" aid="D2:76:00:01:24:10:00:01"/>
            </cap>
        </javacard>
    </target>
</project>